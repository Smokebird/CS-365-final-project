from flask import flask
from flask.ext.sqalchemy import sqalchemy

app= Flask(__name__)
app.config['SQLALCHEMY_DATABASE_URI'] = 'sqlite:////tmp/test.db'
db = SQLAlchemy(app)

class Conversion(db.Model):
	__table__='conversion'
	fahrenheit_unit = db.Column(db.Integer, ForeignKey('fahrenheit.id'))
	celsius_unit = db.Column(db.Integer, ForeignKey('celsius.id'))

conversion = db.Table('conversion',
db.Column('fahrenheit_unit',db.Integer, db.ForeignKey('fahrenheit.id'))
db.Column('celsius_unit', db.Integer, db.ForeignKey('celsius.id'))
db.Column('initial_val', db.Integer)
)

class Fahrenheit(db.Model):
	__tablename__='fahrenheit'
	id = db.Column(db.Integer, primary_key=True)
	unit_name = db.Column(db.Text)
	#store 5/9...
	unit_conversion_divide = (db.Float)
	#store 32 to be subtracted from the C input
	unit_conversion_subtract = (db.Integer)
	celsius = db.relationship('Celsius', secondary = conversion)


class Celsius(db.Model):
	__tablename__='celsius'
	id = db.Column(db.Integer, primary_key=True)
	unit_name = db.Column(db.Text)
	#store 9/5 to be multiplied by the F input
	unit_conversion_multiply = (db.Float) 
	#store 32 to be subtracted from the prod of F and 9/5
	unit_conversion_add = (db.Integer)
	fahrenheit = db.relationship('Fahrenheit', secondary = conversion)

conversion1 = Celsius(id=1, unit_name='celsius', unit_conversion_divide = 1.8, unit_conversion_add = 32)
db.session.add_all([conversion1])
fahrenheit1 = Fahrenheit(id=1, unit_name='fahrenheit', unit_conversion_divide = 0.56, unit_conversion_subtract = 32)


db.drop_all()
db.create_all()

db.session.commit()

